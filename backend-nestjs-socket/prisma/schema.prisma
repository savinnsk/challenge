

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
    id String @id @default(uuid())
    name String
    nickname String
    password String
    email String
    photoUrl String?
    rooms        Room[]

    @@map("users")
}

model Room {
    id String @id @default(uuid())
    name String
    userId String
    welcomeMessage String
    user            User @relation(fields: [userId], references: [id])
    
    @@map("rooms")
}


